<div class="sign_in">
  <div class="sign_in_area">
    <h1 class="sign_in_logo">Sign in</h2>
    <div class="sign_in_form">
      <%= form_with model: @user, url: user_session_path, method: :post do |f| %>
        <div class="field">
          <%= f.label :email, class:"sign_in_form_label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"sign_in_form_input" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"sign_in_form_label"  %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"sign_in_form_input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign in !", class:"sign_in_btn" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>